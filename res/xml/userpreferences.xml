<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:orion="http://schemas.android.com/apk/res/com.google.code.orion_viewer">
    <PreferenceCategory
            android:title="Layout">
        <CheckBoxPreference
                android:key="FULL_SCREEN"
                android:title="@string/pref_fullScreen"
                android:summary="@string/pref_fullScreen"
                android:defaultValue="false"/>

        <!--page orientation-->
        <ListPreference
                android:key="BOOK_ORIENTATION"
                android:title="@string/pref_bookDefaultOrientation"
                android:summary="@string/pref_rotate_new_book_on_opening"
                android:entries="@array/orientation_desc"
                android:entryValues="@array/orientation"
                android:dialogTitle="Rotation"
                android:defaultValue="0"/>


        <ListPreference
                android:key="SCREEN_ORIENTATION"
                android:title="@string/pref_screen_orientation"
                android:summary="@string/pref_rotate_screen"
                android:entries="@array/screen_orientation_desc"
                android:entryValues="@array/screen_orientation"
                android:dialogTitle="Rotation"
                android:defaultValue="DEFAULT" orion:justAndroidGeneral="true"/>
    </PreferenceCategory>

    <PreferenceCategory
            android:title="General">

        <CheckBoxPreference
                android:key="APPLY_AND_CLOSE"
                android:title="@string/pref_close_dialog_on_apply"
                android:summary="@string/pref_close_page_option_dialog_on_apply"
                android:defaultValue="false"/>
    </PreferenceCategory>
    <PreferenceCategory
            android:title="Key Manager">
        <CheckBoxPreference
                android:key="SWAP_KEYS"
                android:title="@string/pref_swap_prev_next_keys"
                android:summary="@string/pref_swap_prev_next_keys_on_90_degree_rotation"
                android:defaultValue="false"/>

        <!--<CheckBoxPreference-->
                <!--android:key="USE_NOOK_KEYS"-->
                <!--android:title="Use Nook2 keys"-->
                <!--android:summary="Use Nook2 next and prev keys"-->
                <!--android:defaultValue="false" orion:justAndroidGeneral="true"/>-->
    </PreferenceCategory>

        <PreferenceCategory
            android:title="@string/pref_dictionary">
            <ListPreference
                    android:key="DICTIONARY"
                    android:title="@string/pref_dictionary"
                    android:summary="@string/pref_dictionary"
                    android:entries="@array/dictionaries_desc"
                    android:entryValues="@array/dictionaries"
                    android:dialogTitle="@string/pref_dictionary"
                    android:defaultValue="FORA"/>
    </PreferenceCategory>

    <PreferenceCategory
            android:title="@string/pref_e_ink_optimization">
        <CheckBoxPreference
                android:key="EINK_OPTIMIZATION"
                android:title="@string/pref_e_ink_fast_refresh"
                android:summary="@string/pref_e_ink_fast_refresh"
                android:defaultValue="false"/>

        <EditTextPreference
          android:dependency="EINK_OPTIMIZATION"
          android:summary="@string/pref_total_refresh_after"
          android:defaultValue="10"
          android:title="@string/pref_total_refresh_after"
          android:key="EINK_TOTAL_AFTER"
          android:numeric="integer"/>

    </PreferenceCategory>

</PreferenceScreen>